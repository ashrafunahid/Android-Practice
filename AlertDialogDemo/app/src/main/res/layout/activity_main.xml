<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/single_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/single_btn"
            android:text="@string/single_button"
            android:textAllCaps="false"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/double_button"
            android:layout_below="@id/single_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/single_btn"
            android:text="@string/double_button"
            android:textAllCaps="false"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/triple_button"
            android:layout_below="@id/double_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/single_btn"
            android:text="@string/triple_button"
            android:textAllCaps="false"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/custom_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/triple_button"
            android:background="@drawable/single_btn"
            android:text="@string/custom_dialog"
            android:textAllCaps="false"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</RelativeLayout>